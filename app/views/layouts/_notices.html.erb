<% if notice || alert %>
  <div class='notice-wrapper'>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
  </div>
  <script>
    setTimeout(function(){
      $('.notice-wrapper').fadeOut()
    }, 3000);
  </script>
<% end %>
